---
import HTML from "../img/html.png";
import CSS from "../img/css.png";
import JS from "../img/javascript.png";
import React from "../img/react.png";
import Python from "../img/python.png";
import Git from "../img/git.png";
import astro from "../img/astro.png";
import Tailwind from "../img/tailwind.png";
---

<div id="skills" class="bg-gray-100 py-12 h-auto md:h-screen">
  <div class="max-w-4xl mx-auto px-6">
    <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">
      Mis Habilidades
    </h2>

    <div
      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6"
    >
      <!-- Habilidad 1 -->
      <div class="flex flex-col items-center">
        <img src={HTML.src} alt="HTML" class="w-20 h-20 mb-4" />
        <h3 class="text-lg font-bold text-gray-800">HTML</h3>
      </div>

      <!-- Habilidad 2 -->
      <div class="flex flex-col items-center">
        <img src={CSS.src} alt="CSS" class="w-20 h-20 mb-4" />
        <h3 class="text-lg font-bold text-gray-800">CSS</h3>
      </div>

      <!-- Habilidad 3 -->
      <div class="flex flex-col items-center">
        <img src={JS.src} alt="JavaScript" class="w-20 h-20 mb-4" />
        <h3 class="text-lg font-bold text-gray-800">JavaScript</h3>
      </div>

      <!-- Habilidad 4 -->
      <div class="flex flex-col items-center">
        <img src={React.src} alt="React" class="w-20 h-20 mb-4" />
        <h3 class="text-lg font-bold text-gray-800">React</h3>
      </div>

      <div class="flex flex-col items-center">
        <img src={Git.src} alt="git" class="w-20 h-20 mb-4" />
        <h3 class="text-lg font-bold text-gray-800">GitHub</h3>
      </div>

      <div class="flex flex-col items-center">
        <img src={Tailwind.src} alt="tailwind" class="w-20 h-20 mb-4" />
        <h3 class="text-lg font-bold text-gray-800">Tailwind Css</h3>
      </div>

      <div class="flex flex-col items-center">
        <img src={Python.src} alt="python" class="w-20 h-20 mb-4" />
        <h3 class="text-lg font-bold text-gray-800">Python</h3>
      </div>

      <div class="flex flex-col items-center">
        <img src={astro.src} alt="astro" class="w-20 h-20 mb-4" />
        <h3 class="text-lg font-bold text-gray-800">Astro</h3>
      </div>
    </div>
  </div>
</div>
